<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/electricbackground"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="20dp"
        app:cardCornerRadius="50dp">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:foregroundGravity="center_horizontal"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/ProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Profile Picture For User"
                android:src="@drawable/default_pfp"
                tools:ignore="HardcodedText,ImageContrastCheck" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ProfileName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:layout_margin="10dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Firstname Lastname"
            android:textColor="@color/black"
            android:textSize="23sp"
            tools:ignore="HardcodedText" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/white"
        android:layout_margin="20dp"
        app:cardCornerRadius="50dp">

        <TextView
            android:id="@+id/ProfileUsername"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="23sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/ProfileEmail"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="23sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/ProfileBio"
            android:layout_width="275dp"
            android:layout_height="100dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Profile Bio"
            android:textColor="@color/black"
            android:textSize="23sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/ProfileGender"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="210dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="23sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/ProfileBirthday"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Birthday"
            android:textColor="@color/black"
            android:textSize="23sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/ProfileEditButton"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="40dp"
            android:text="Edit Profile"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:fontFamily="@font/abril_fatface"
            android:backgroundTint="#8BF7FD"
            tools:ignore="HardcodedText"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>